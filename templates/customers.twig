{% block title_page %}Customers List {% endblock %}

{% block content %}

        <div class="row">
            <div class="col-sm-12">
                <div class="box box-color box-bordered">
                    <div class="box-title">
                        <h3>
                            <i class="fa fa-table"></i>
                            Customers
                        </h3>
                    </div>
                    <div class="box-content nopadding">
                        <table class="table table-hover table-nomargin table-bordered dataTable dataTable-tools">
                            <thead>
                            <tr>
                                <th>{{ titles.id }} </th>
                                <th class='hidden-480'>{{titles.curp }}</th>
                                <th>{{ titles.lastname }} </th>
                                <th>{{ titles.surname }}</th>
                                <th>{{titles.names }}</th>

                                
                            </tr>
                            </thead>
                            <tbody>
                            
                                {% for customer in customers %}
                                    <tr>
                                    <td><a href="{{ path_for('customer', { 'id': customer.person_id}) }}">{{ customer.person_id }}</a></td>
                                    <td class='hidden-480'><a href="{{ path_for('customer', { 'id': customer.person_id}) }}">{{ customer.curp }}</a></td>
                                    <td><a href="{{ path_for('customer', { 'id': customer.person_id}) }}">{{ customer.lastname|capitalize }}</a></td>
                                    <td><a href="{{ path_for('customer', { 'id': customer.person_id}) }}">{{ customer.surname|capitalize }}</a></td>
                                    <td><a href="{{ path_for('customer', { 'id': customer.person_id}) }}">{{ customer.name|capitalize }}</a></td>
                                    </tr>
                                {% endfor %}
                                
                            </tr>
                           
                            </tbody>
                        </table>
                        {{ path_for('customerAdd') }}
                    </div>
                </div>
            </div>
        </div>






    
</div>





